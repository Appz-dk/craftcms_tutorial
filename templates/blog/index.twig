{% extends '_layout' %}

{# Getting all posts from the blog section #}
{% set posts = craft.entries().section('blog').all() %}

{% block content %}

  <h1>Blog</h1>

  {% for post in posts %}
    {% set postImage = post.featureImage.one() %}

    <article class="blog-container">
      {% if postImage %}
        <div class="thumbnail">
          {{ postImage.getImg() }}
        </div>
      {% endif %}

      <h2>{{ post.title }}</h2>
      <time datetime="{{ post.postDate | atom }}">
        {{ post.postDate | date }}
      </time>

      {{ post.summary | md }}

      <a href="{{ post.url }}">Continue Reading</a>
    </article>

  {% endfor %}

{% endblock %}