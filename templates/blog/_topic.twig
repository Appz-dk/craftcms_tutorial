{% extends '_layout' %}

{# Get all blog posts for specific category #}
{% set posts = craft.entries().section('blog').postCategories(category).all() %}

{% block content %}

  <h1>Topic: {{category.title}}</h1>

  {% for post in posts %}
    {% set postImage = post.featureImage.one() %}

    <article>
      {% if postImage %}
        <div class="thumbnail">
          {{ postImage.getImg() }}
        </div>
      {% endif %}

      <h2>{{ post.title }}</h2>

      <time datetime="{{ post.postDate | atom }}">
        {{ post.postDate | date }}
      </time>

      {{ post.summary | md }}

      <a href="{{ post.url }}">Continue Reading</a>
    </article>
  {% endfor %}


{% endblock %}